<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:PEunion"
	xmlns:api="https://schemas.bytecode77.com/2019/xaml/api"
	xmlns:ui="https://schemas.bytecode77.com/2019/xaml/presentation">
	<Style TargetType="{x:Type StatusBar}">
		<Setter Property="Padding" Value="3,0" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="Background" Value="#40508d" />
	</Style>
	<Style TargetType="{x:Type ResizeGrip}">
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ResizeGrip}">
					<Border Width="18" Height="18" SnapsToDevicePixels="True" Background="{TemplateBinding Background}">
						<Image Source="/PEunion;component/Resources/Theme/ResizeGrip.png" VerticalAlignment="Center" HorizontalAlignment="Center" />
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>